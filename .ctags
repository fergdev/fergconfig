--recurse=yes
--tag-relative=yes
--exclude=\.(git|hg)

--langdef=Umajin
--langmap=Umajin:.u
--regex-Umajin=/[ \t]*define[ \t]+[a-z0-9_]+[ \t]+([a-z0-9_]+)/\1/d,define/
--regex-Umajin=/[ \t]*instance[ \t]+[a-z0-9_]+[ \t]+([a-z0-9_]+)/\1/i,instance/
--regex-Umajin=/[ \t]*method[ \t]+([a-z0-9_]+)\(/\1/m,method/
--regex-Umajin=/[ \t]*property[ \t]+[a-z0-9_]+[ \t]+([a-z0-9_]+)/\1/p,property/
--regex-Umajin=/[ \t]*[a-z0-9_]+[ \t]+([a-z0-9_]+)[ \t]+\=[ \t]+[a-z0-9_]+/\1/o,object/
